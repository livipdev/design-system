{
  "name": "@livip/design-system",
  "version": "0.0.0",
  "description": "Components package for our React applications",
  "author": "odelucca",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/livipdev/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/livipdev/design-system/issues"
  },
  "engines": {
    "yarn": ">=1.22.4",
    "node": ">=13.10.1"
  },
  "workspaces": [
